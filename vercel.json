{
    "$schema": "https://openapi.vercel.sh/vercel.json",
    "framework": "nextjs",
    "buildCommand": "npm run build",
    "devCommand": "npm run dev",
    "installCommand": "npm install",
    "regions": [
        "gru1"
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                }
            ]
        }
    ],
    "crons": [
        {
            "path": "/api/cron/master",
            "schedule": "0 8 * * *"
        },
        {
            "path": "/api/cron/learn-prices",
            "schedule": "0 6 * * *"
        },
        {
            "path": "/api/cron/hard-delete",
            "schedule": "0 7 * * *"
        }
    ]
}